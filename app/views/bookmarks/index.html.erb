<h1>Bookmarks</h1>

<div id='bookmark-form'>
  <h4>Add bookmark</h4>
  <%= form_for @bookmark, url: { action: 'create' } do |f| %>
    URL: <%= f.text_field :url %>
    Tags: <%= f.text_field :tag_list %>
    <%= submit_tag 'Create', class: 'create-btn' %>
  <%end%>
</div>

<div id='bookmark-search'>
  <h4>Search</h4>
  <%= form_for(bookmarks_path, method: :get) do %>
    <%= text_field_tag :search %>
    <%= submit_tag 'Search', class: 'search-btn' %>
  <%end%>
  <%= link_to 'Reset search', bookmarks_path, controller: 'bookmarks', action: 'index', class: 'reset-search-btn' %>
</div>

<%= render 'list' %>